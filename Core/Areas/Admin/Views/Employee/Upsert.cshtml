@model EmployeeVM

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
    <div class="row">
        <div class="col-12 text-center">
                <h2 class="text-white py-2"> @(string.IsNullOrEmpty(Model.Employee.Email) ? "Update" : "Create") Employee</h2>
        </div>
    </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Employee.Action" hidden />
            <div class="row">
                <div class="col-12">
                    <div class="border p-3">
                        <div asp-validation-summary="ModelOnly"></div>
                        
                        <div class="form-floating py-2 col-12">
                            @if (Model.Employee.Action == CRUDAction.UPDATE)
                            {
                                <input asp-for="Employee.Email" disabled class="form-control border-0 shadow" />
                                <input type="hidden" asp-for="Employee.Email" />
                            }
                            else
                            {
                                <input asp-for="Employee.Email" class="form-control border-0 shadow" />
                            }
                            <label asp-for="Employee.Email" class="ms-2"></label>
                            <span asp-validation-for="Employee.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Employee.Name" class="form-control border-0 shadow" />
                            <label asp-for="Employee.Name" class="ms-2"></label>
                            <span asp-validation-for="Employee.Name" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Employee.Surname" class="form-control border-0 shadow" />
                            <label asp-for="Employee.Surname" class="ms-2"></label>
                            <span asp-validation-for="Employee.Surname" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Employee.Phone" class="form-control border-0 shadow" />
                            <label asp-for="Employee.Phone" class="ms-2"></label>
                            <span asp-validation-for="Employee.Phone" class="text-danger"></span>
                        </div>
                        
                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                @if (Model.Employee.Action == CRUDAction.UPDATE)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Update</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Create</button>
                                }
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-area="Admin" asp-controller="Employee" asp-action="Index" class="btn btn-outline-primary border  form-control">
                                    Back to List
                                </a>
                            </div>
                        </div>


                    </div>
                </div>
               
            </div>
           
        </form>
    </div>
</div>




@section Scripts{
    @{
     <partial name="_ValidationScriptsPartial"/>
    }
}